<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:WpfAppSkeleton.ViewModels"
                    xmlns:views="clr-namespace:WpfAppSkeleton.Views"
                    xmlns:local="clr-namespace:WpfAppSkeleton.Resources">
    
    <!-- Define mapping between your view models and views -->
    <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
        <views:MainView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ChildViewModel}">
        <views:ChildView/>
    </DataTemplate>
</ResourceDictionary>